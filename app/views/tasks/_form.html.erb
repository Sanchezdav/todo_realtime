<%= form_with(model: [project, task],
              html: { data: { controller: 'tasks' }},
              local: false) do |form| %>
  <% if task.errors.any? %>
    <div class="alert alert-danger">
      <ul class="m-0">
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.text_area :description, class: "form-control", rows: 3, placeholder: "What do you want to do..." %>
  </div>

  <div class="d-flex align-items-center justify-content-between mb-3">
    <%= form.submit "Create", id: "submit-tasks", class: "btn btn-success", data: { reflex: 'click->Tasks#create' } %>
    <%= link_to "Cancel", project_path(project) %>
  </div>
<% end %>
